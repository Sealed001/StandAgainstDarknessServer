{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "paths": {
      "@config": ["./src/config"],
      "@events": ["./src/types/events"],

      // Storage
      "@parties": ["./src/storage/parties"],
      "@users": ["./src/storage/users"],

      // Main types
      "@Party": ["./src/types/main/Party"],
      "@User": ["./src/types/main/User"],

      // Other types
      "@Socket": ["./src/types/socket/CustomSocket"],
      "@Server": ["./src/types/server/CustomServer"],
      "@PartyInfo": ["./src/types/PartyInfo"]
    }
  }
}
