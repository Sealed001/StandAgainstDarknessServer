{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "paths": {
      "@types/*": ["./src/types/*"],

      // Storage
      "@parties": ["./src/storage/parties"],
      "@users": ["./src/storage/users"],

      // Main types
      "@Party": ["./src/types/main/Party"],
      "@User": ["./src/types/main/User"],

      // Other types
      "@Socket": ["./src/types/socket/CustomSocket"],
      "@Server": ["./src/types/server/CustomServer"],
    }
  },
}
